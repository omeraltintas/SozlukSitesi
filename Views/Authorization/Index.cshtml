@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:5px">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetki Değiştir</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.AdminID</th>
    <td>@item.AdminUserName</td>
    <td>@item.AdminRole</td>
    <td>Aktif</td>
    <td><a href="/AdminCategory/@item.AdminID" class="btn btn-danger">Pasif Yap</a></td>
    <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetki Değiştir</a></td>
</tr>
    }
</table>
<a href="/Authorization/AddAdmin" class="btn btn-outline-info">Yeni Admin Tanımla</a>

